<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_my_custom_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.internal_layout">
                    <div class="page" style="margin-top: 0px; padding-top: 0px;">
                        <div style='text-align : center; padding-top: 0px;'>
                            <img src="/novo_customization/static/src/img/logo.png" alt="Logo" style="max-height: 50px; size : 200px;"/>
                            <h4 style = 'font-weight: bold;'> NOVO Cosmetics Myanmar </h4>
                            <p>09 - 967265691/ 09 - 882654904</p>
                            <p style="line-height: 1;"> Distributed by Patina Myanmar Co.,Ltd </p>
                        </div>
                        <hr style="border: 2px solid;"/>
                        <div class="row mt-3 mb-3">
                            <h5 class='col-auto' style='margin-right : 400px;'> Sales Invoices</h5>
                        </div>

                        <div id="informations" class="row mt-3 mb-3">
                            <div  t-attf-class="col-auto" style='margin-right : 300px;'>
                                <span >
                                Customer     : <t t-esc="doc.partner_id.name"/>
                                <br/> <br/>
                                Address      : 
                                <br/> <br/>
                                Phone        : 
                                </span>
                            </div>

                            <div t-attf-class="col-auto">
                                <span>
                                Date              : <t t-esc="doc.invoice_date"/>
                                <br/><br/>
                                Invoice Number    : <t t-esc="doc.payment_reference"/>
                                <br/> <br/>
                                Sale Person       : 
                                </span>
                            </div>

                        </div>

                        <table class="table table-bordered" style="border: 1px solid;">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Item Name</th>
                                    <th style='text-align : right;'>Qty</th>
                                    <th style='text-align : center;'>Unit</th>
                                    <th style='text-align : right;'>Price</th>
                                    <th style='text-align : right;'>Discount %</th>
                                    <th style='text-align : right;'>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set='i' t-value='0'/>
                                <t t-foreach="doc.invoice_line_ids" t-as="l">
                                    <t t-set='i' t-value='i+1'/>
                                    <tr>
                                        <td style='text-align: center;'><t t-out='i'/></td>
                                        <td><t t-out="l.name"/></td>
                                        <td style='text-align : right;'><t t-out="l.quantity"/></td>
                                        <td style='text-align : center;'><t t-out="l.product_uom_id.name"/></td>
                                        <td style='text-align : right;'><t t-out="l.price_unit"/></td>
                                        <td style='text-align : right;'><t t-out="l.discount"/></td>
                                        <td style='text-align : right;'><t t-out="l.price_total"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>








        
                        
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
